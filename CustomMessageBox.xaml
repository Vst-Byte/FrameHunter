<Window x:Class="FrameHunterFPS.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert" Width="420" SizeToContent="Height"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">

    <Window.Resources>
        <LinearGradientBrush x:Key="BrandGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00FFFF" Offset="0"/>
            <GradientStop Color="#BC13FE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Border Background="#121212" BorderThickness="1" CornerRadius="12" Margin="15">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#00FFFF" Offset="0"/>
                <GradientStop Color="#BC13FE" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="10" Opacity="0.8"/>
        </Border.Effect>

        <Grid Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,25,0,15">
                <TextBlock x:Name="TxtTitle" Text="WINDOWS OPTIMIZED" 
                           Foreground="White" FontSize="20" FontWeight="Bold" 
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"/>

                <Rectangle Height="2" Width="60" Margin="0,10,0,0" HorizontalAlignment="Center">
                    <Rectangle.Fill>
                        <StaticResource ResourceKey="BrandGradient"/>
                    </Rectangle.Fill>
                </Rectangle>
            </StackPanel>

            <TextBlock x:Name="TxtMessage" Text="System configuration completed successfully." Grid.Row="1"
                       Foreground="#BBBBBB" FontSize="14" TextWrapping="Wrap"
                       TextAlignment="Center" Margin="40,0,40,25" LineHeight="20"/>

            <Button Grid.Row="2" Content="CONFIRM" Click="BtnOk_Click"
                    Width="140" Height="40" Margin="0,0,0,25" Cursor="Hand"
                    Foreground="White" FontWeight="Bold" FontSize="13" FontFamily="Segoe UI">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="6" BorderThickness="1" Background="Transparent">
                            <Border.BorderBrush>
                                <StaticResource ResourceKey="BrandGradient"/>
                            </Border.BorderBrush>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" Opacity="0.8">
                                            <GradientStop Color="#00FFFF" Offset="0"/>
                                            <GradientStop Color="#BC13FE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bdr" Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>