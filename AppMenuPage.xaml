<Page x:Class="FrameHunterFPS.AppMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="840"
      FontFamily="Rajdhani, Bahnschrift, Segoe UI">

    <Page.Resources>
        <Color x:Key="ColorCyan">#00FFFF</Color>
        <Color x:Key="ColorPurple">#BC13FE</Color>
        <SolidColorBrush x:Key="BrushBg" Color="#141417"/>
        <SolidColorBrush x:Key="BrushTrack" Color="#2A2A30"/>
        <SolidColorBrush x:Key="BrushTextMuted" Color="#A0A0A0"/>
        <SolidColorBrush x:Key="BrushCyan" Color="{StaticResource ColorCyan}"/>
        <SolidColorBrush x:Key="BrushPurple" Color="{StaticResource ColorPurple}"/>
        <LinearGradientBrush x:Key="BrandGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource ColorCyan}" Offset="0.0"/>
            <GradientStop Color="{StaticResource ColorPurple}" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="TechCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2A2A30" Offset="0.0"/>
                        <GradientStop Color="#1F1F23" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#66FFFFFF" Offset="0.0"/>
                        <GradientStop Color="Transparent" Offset="0.4"/>
                        <GradientStop Color="#44000000" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="8" Opacity="0.8" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent" Margin="40,20,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,40">
            <TextBlock Text="SYSTEM STATUS" FontSize="32" FontWeight="Bold">
                <TextBlock.Foreground>
                    <StaticResource ResourceKey="BrandGradient"/>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect Color="{StaticResource ColorPurple}" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="REAL-TIME MONITORING" Foreground="{StaticResource BrushTextMuted}" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource TechCard}" Margin="0,0,15,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="25,20,0,0">
                        <Border Width="4" Height="16" Background="{StaticResource BrushCyan}" CornerRadius="4" Margin="0,0,10,0"/>
                        <TextBlock Text="CPU" Foreground="White" FontWeight="Bold" FontSize="16" Margin="5,0,0,0"/>
                        <TextBlock Text="PROCESSOR" Foreground="{StaticResource BrushTextMuted}" FontSize="16" Margin="8,0,0,0"/>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="25,10,25,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TxtCpu" Text="0°C" FontSize="64" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,10,0,0">
                            <TextBlock Text="MODEL" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtCpuName" Text="Loading..." Foreground="White" FontSize="13" TextTrimming="CharacterEllipsis" Margin="0,0,0,8"/>
                            <TextBlock Text="CLOCK SPEED" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtCpuClock" Text="0 MHz" Foreground="{StaticResource BrushCyan}" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                    <ProgressBar x:Name="PbCpu" Grid.Row="2" Height="4" BorderThickness="0" Background="{StaticResource BrushTrack}" Foreground="{StaticResource BrandGradient}" Maximum="100"/>
                </Grid>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource TechCard}" Margin="15,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="25,20,0,0">
                        <Border Width="4" Height="16" Background="{StaticResource BrushCyan}" CornerRadius="4" Margin="0,0,10,0"/>
                        <TextBlock Text="GPU" Foreground="White" FontWeight="Bold" FontSize="16" Margin="5,0,0,0"/>
                        <TextBlock Text="GRAPHICS" Foreground="{StaticResource BrushTextMuted}" FontSize="16" Margin="8,0,0,0"/>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="25,10,25,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TxtGpu" Text="0°C" FontSize="64" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,10,0,0">
                            <TextBlock Text="MODEL" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtGpuName" Text="Loading..." Foreground="White" FontSize="13" TextTrimming="CharacterEllipsis" Margin="0,0,0,8"/>
                            <TextBlock Text="CORE CLOCK" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtGpuClock" Text="0 MHz" Foreground="{StaticResource BrushCyan}" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                    <ProgressBar x:Name="PbGpu" Grid.Row="2" Height="4" BorderThickness="0" Background="{StaticResource BrushTrack}" Foreground="{StaticResource BrandGradient}" Maximum="100"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource TechCard}" Margin="0,15,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="25,20,0,0">
                        <Border Width="4" Height="16" Background="{StaticResource BrushPurple}" CornerRadius="4" Margin="0,0,10,0"/>
                        <TextBlock Text="RAM" Foreground="White" FontWeight="Bold" FontSize="16" Margin="5,0,0,0"/>
                        <TextBlock Text="MEMORY" Foreground="{StaticResource BrushTextMuted}" FontSize="16" Margin="8,0,0,0"/>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="25,10,25,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TxtRam" Text="0" FontSize="64" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="%" Foreground="{StaticResource BrushPurple}" FontSize="24" Margin="5,10,0,0" VerticalAlignment="Top"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,10,0,0">
                            <TextBlock Text="USED / TOTAL" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtRamDetail" Text="0 / 0 GB" Foreground="White" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock Text="SPEED" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtRamClock" Text="0 MHz" Foreground="{StaticResource BrushPurple}" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                    <ProgressBar x:Name="PbRam" Grid.Row="2" Height="4" BorderThickness="0" Background="{StaticResource BrushTrack}" Foreground="{StaticResource BrandGradient}" Maximum="100"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource TechCard}" Margin="15,15,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="25,20,0,0">
                        <Border Width="4" Height="16" Background="{StaticResource BrushPurple}" CornerRadius="4" Margin="0,0,10,0"/>
                        <TextBlock Text="PING" Foreground="White" FontWeight="Bold" FontSize="16" Margin="5,0,0,0"/>
                        <TextBlock Text="NETWORK" Foreground="{StaticResource BrushTextMuted}" FontSize="16" Margin="8,0,0,0"/>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="25,10,25,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TxtPing" Text="0" FontSize="64" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="ms" Foreground="{StaticResource BrushPurple}" FontSize="24" Margin="5,10,0,0" VerticalAlignment="Top"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,10,0,0">
                            <TextBlock Text="SERVER" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="Google DNS" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBlock Text="STATUS" Foreground="{StaticResource BrushTextMuted}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="TxtPingStatus" Text="Checking..." Foreground="{StaticResource BrushPurple}" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                    <ProgressBar x:Name="PbPing" Grid.Row="2" Height="4" BorderThickness="0" Background="{StaticResource BrushTrack}" Foreground="{StaticResource BrandGradient}" Maximum="200"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>