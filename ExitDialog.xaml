<Window x:Class="FrameHunterFPS.ExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exit Option" Height="250" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">

    <Window.Resources>
        <LinearGradientBrush x:Key="BrandGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00FFFF" Offset="0"/>
            <GradientStop Color="#BC13FE" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="8" Background="#222" BorderThickness="1" BorderBrush="#444">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="#BC13FE"/>
                                <Setter TargetName="bdr" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#141417" CornerRadius="15" BorderThickness="1" BorderBrush="#333">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="CLOSE FRAME HUNTER?" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#BC13FE" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Grid.Row="1" Text="Do you want to exit completely or keep the optimization engine running in the background?" 
                       Foreground="#AAA" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="10,0"/>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="EXIT APP" Click="BtnExit_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF5555"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2" Content="RUN IN BACKGROUND" Click="BtnMinimize_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bdr" CornerRadius="8" Background="{StaticResource BrandGradient}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-15,-10,0" 
                    Background="Transparent" BorderThickness="0" Foreground="Gray" Click="BtnCancel_Click" Width="30"/>
        </Grid>
    </Border>
</Window>